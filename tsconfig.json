{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "allowJs": false,
    "strict": false,
    "outDir": "lib"
  }
}